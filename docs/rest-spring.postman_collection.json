	"item": [
		{
			"name": "Token 鉴权认证接口",
			"item": [
				{
					"name": "获取 Access Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const jsonData = pm.response.json();",
									"if (jsonData.status === 'success') {",
									"  pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
									"  pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"accountName\": \"管理员\",\n  \"accountPassword\": \"123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://127.0.0.1:8080/access_token",
							"protocol": "http",
							"host": [
								"127",
								"0",
								"0",
								"1"
							],
							"port": "8080",
							"path": [
								"access_token"
							]
						}
					},
					"response": []
				},
				{
					"name": "刷新 Access Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const jsonData = pm.response.json();",
									"if (jsonData.status === 'success') {",
									"  pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
									"  pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"protocolProfileBehavior": {
						"disableBodyPruning": true
					},
					"request": {
						"method": "GET",
						"header": [],
						"body": {
							"mode": "urlencoded",
							"urlencoded": []
						},
						"url": {
							"raw": "http://127.0.0.1:8080/refresh_token?token={{refreshToken}}",
							"protocol": "http",
							"host": [
								"127",
								"0",
								"0",
								"1"
							],
							"port": "8080",
							"path": [
								"refresh_token"
							],
							"query": [
								{
									"key": "token",
									"value": "{{accessToken}}",
									"disabled": true
								},
								{
									"key": "token",
									"value": "{{refreshToken}}"
								}
							]
						}
					},
					"response": []
				}
			]
		},
