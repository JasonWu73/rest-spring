<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.6.3</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>net.wuxianjie</groupId>
  <artifactId>rest-spring</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging> <!-- 表示用于定义子模块的父项目 -->

  <!-- 定义子模块 -->
  <modules>
    <module>core</module>
    <module>web</module>
  </modules>

  <properties>
    <!-- 设置 Spring Boot Maven 插件所使用的 JDK 版本, 默认使用 UTF-8 编码 -->
    <java.version>11</java.version>

    <!-- === 设置依赖库版本 === -->
    <my.core.version>0.0.1-SNAPSHOT</my.core.version>
    <my.elasticsearch.version>0.0.1-SNAPSHOT</my.elasticsearch.version>

    <jjwt.version>0.11.2</jjwt.version>
    <hutool.version>5.7.20</hutool.version>
    <mybatis-spring-boot-starter.version>2.2.2</mybatis-spring-boot-starter.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- Java工具类库 Hutool -->
      <dependency>
        <groupId>cn.hutool</groupId>
        <artifactId>hutool-all</artifactId>
        <version>${hutool.version}</version>
      </dependency>

      <!-- Spring Boot 整合 MyBatis -->
      <dependency>
        <groupId>org.mybatis.spring.boot</groupId>
        <artifactId>mybatis-spring-boot-starter</artifactId>
        <version>${mybatis-spring-boot-starter.version}</version>
      </dependency>

      <!-- === JWT === -->
      <dependency>
        <groupId>io.jsonwebtoken</groupId>
        <artifactId>jjwt-api</artifactId>
        <version>${jjwt.version}</version>
      </dependency>

      <dependency>
        <groupId>io.jsonwebtoken</groupId>
        <artifactId>jjwt-impl</artifactId>
        <version>${jjwt.version}</version>
      </dependency>

      <dependency>
        <groupId>io.jsonwebtoken</groupId>
        <artifactId>jjwt-jackson</artifactId>
        <version>${jjwt.version}</version>
      </dependency>

      <!-- 核心模块 -->
      <dependency>
        <groupId>net.wuxianjie</groupId>
        <artifactId>core</artifactId>
        <version>${my.core.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
