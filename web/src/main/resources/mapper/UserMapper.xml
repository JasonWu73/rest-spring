<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.wuxianjie.web.mapper.UserMapper">
  <sql id="findUsersPaginationByUsernameWhereClause">
    <where>
      <if test="username != null and username != ''">
        name LIKE #{username}
      </if>
    </where>
  </sql>

  <select id="findUsersPaginationByUsername" resultType="User">
    SELECT
      id AS userId,
      name AS username,
      IFNULL(roles, '') AS roles
    FROM
      user
    <include refid="findUsersPaginationByUsernameWhereClause"/>
    LIMIT #{from}, #{pageSize}
  </select>

  <select id="findUserCountByUsername" resultType="int">
    SELECT
      COUNT(1)
    FROM
      user
    <include refid="findUsersPaginationByUsernameWhereClause"/>
  </select>

  <insert id="addUser">
    INSERT INTO user (name, password, roles)
    VALUES (#{username}, #{password}, #{roles})
  </insert>
</mapper>