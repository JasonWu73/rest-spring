<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.wuxianjie.web.mapper.UserMapper">
  <sql id="findUserSelectClause">
    SELECT
      id AS userId,
      name AS username,
      IFNULL(roles, '') AS roles
    FROM
      user
  </sql>

  <sql id="findUsersPaginationByUsernameWhereClause">
    <where>
      <if test="username != null and username != ''">
        name LIKE #{username}
      </if>
    </where>
  </sql>

  <select id="findUserByUserId" resultType="User">
    <include refid="findUserSelectClause"/>
    WHERE
      id = #{userId}
  </select>

  <select id="findUsersPaginationByUsername" resultType="User">
    <include refid="findUserSelectClause"/>
    <include refid="findUsersPaginationByUsernameWhereClause"/>
    LIMIT #{from}, #{pageSize}
  </select>

  <select id="findUserCountByUsername" resultType="int">
    SELECT
      COUNT(1)
    FROM
      user
    <include refid="findUsersPaginationByUsernameWhereClause"/>
  </select>

  <insert id="addUser">
    INSERT INTO user (create_time, modify_time,
                      name, password, roles)
    VALUES (datetime(CURRENT_TIMESTAMP, 'localtime'), datetime(CURRENT_TIMESTAMP, 'localtime'),
            #{username}, #{password}, #{roles})
  </insert>

  <update id="updateUser">
    UPDATE user
    <set>
      modify_time=datetime(CURRENT_TIMESTAMP, 'localtime'),
      <if test="roles != null">roles = #{roles}</if>
    </set>
    WHERE id = #{userId}
  </update>
</mapper>